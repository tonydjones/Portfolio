                android:layout_weight="1"
                android:text="..."
                android:onClick="details">

            </Button>

        </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Next"
        android:onClick="next"
        android:layout_gravity="bottom">
    </Button>

</LinearLayout>